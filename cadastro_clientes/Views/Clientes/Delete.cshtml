@model cadastro_cliente.Models.Cliente

@{
    ViewData["Title"] = "Excluir";
}

<h1>Exclusão</h1>

<h3>Você tem certeza que deseja exluir?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.data_nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data_nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sexo.genero)
        </dd>
        <dd class="col-sm-10">
            @foreach (var item in Model.enderecos)
            {
                <strong>CEP: </strong>
                @Html.DisplayFor(modelItem => item.endereco.cep)
                <br />
                <strong>Estado: </strong>
                @Html.DisplayFor(modelItem => item.endereco.cidade.estado.nome)
                <br />
                <strong>Cidade: </strong>
                @Html.DisplayFor(modelItem => item.endereco.cidade.nome)
                <br />
                <strong> Bairro: </strong>
                @Html.DisplayFor(modelItem => item.endereco.bairro)
                <br />
                <strong> Rua: </strong>
                @Html.DisplayFor(modelItem => item.endereco.rua)
                <br />
                <strong> Número: </strong>
                @Html.DisplayFor(modelItem => item.endereco.numero)
                <br />
                <strong> Complemento: </strong>
                @Html.DisplayFor(modelItem => item.endereco.complemento)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
